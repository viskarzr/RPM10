<Window x:Class="RPM10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPM10"
        mc:Ignorable="d"
        Title="Зоопарк" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAbout" Content="О программе" VerticalAlignment="Center" Margin="10,10,10,10" Width="150"/>
            <Button x:Name="btnExit" Content="Выход" VerticalAlignment="Center" Margin="10,10,10,10" Width="100"/>
        </StackPanel>
        <StackPanel Grid.RowSpan="2">
            <Label Content="Список животных:" FontWeight="UltraBold" FontSize="14"/>
            <ListBox x:Name="lbAnimal" Height="230" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,0,5,10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.RowSpan="3">
            <Label Content="Добавить/Изменить животное:" FontSize="14" FontWeight="UltraBold"/>
            <Label Content="Вид животного:"/>
            <ComboBox x:Name="cbAnimals" Width="300"/>
            <Label Content="Номер животного:" Margin="0,10,0,0"/>
            <TextBox x:Name="tbId" TextWrapping="Wrap" Width="300"/>
            <Label Content="Название животного:"/>
            <TextBox x:Name="tbName" TextWrapping="Wrap" Width="300"/>
            <Label Content="Вес:"/>
            <TextBox x:Name="tbWeight" TextWrapping="Wrap" Width="300"/>
            <Label Content="Возраст:"/>
            <TextBox x:Name="tbAge" TextWrapping="Wrap" Width="300"/>
            <Button x:Name="btnAdd" Content="Добавить" Margin="0,20,0,0" HorizontalAlignment="Center" Width="300" Click="btnAdd_Click"/>
            <Button x:Name="btnChange" Content="Изменить" Margin="0,5,0,0" HorizontalAlignment="Center" Width="300" Click="btnChange_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Content="Удаление по номеру животного из списка:" FontSize="14" FontWeight="UltraBold"/>
            <Label Content="Номер в списке:"/>
            <TextBox x:Name="btnCode" TextWrapping="Wrap" Width="300" Padding="0,0,0,5"/>
            <Button x:Name="btnDel" Content="Удалить" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Click="btnDel_Click"/>
        </StackPanel>
    </Grid>
</Window>
